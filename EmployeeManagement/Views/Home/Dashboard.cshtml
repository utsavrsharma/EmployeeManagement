
@{
    ViewData["Title"] = "Dashboard";
}

<h1>Profiles</h1>
<div class="container mt-5">
    <div class="row">
        <!-- Employee Box -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Employee</h5>
                </div>
                <div class="card-body">
                    <p>Manage your employees here.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">View Employees</a>
                   
                </div>
            </div>
        </div>

        <!-- Department Box -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Department</h5>
                </div>
                <div class="card-body">
                    <p>Manage your departments here.</p>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-primary">View Departments</a>
                   
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script><br /><br />

